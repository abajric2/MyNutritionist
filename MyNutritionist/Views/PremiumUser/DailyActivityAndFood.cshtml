@model MyNutritionist.Models.EnterActivityAndFoodViewModel
<h1>Create Meal and Activity</h1>

<form asp-action="Create" method="post">
    <div class="input-container">
        <label asp-for="Breakfast">Breakfast</label>
        <input asp-for="Breakfast" class="form-control" />
        <span asp-validation-for="Breakfast" class="text-danger"></span>
    </div>

    <div class="input-container">
        <label asp-for="Lunch">Lunch</label>
        <input asp-for="Lunch" class="form-control" />
        <span asp-validation-for="Lunch" class="text-danger"></span>
    </div>

    <div class="input-container">
        <label asp-for="Dinner">Dinner</label>
        <input asp-for="Dinner" class="form-control" />
        <span asp-validation-for="Dinner" class="text-danger"></span>
    </div>

    <div class="input-container">
        <label asp-for="Snacks">Snacks</label>
        <input asp-for="Snacks" class="form-control" />
        <span asp-validation-for="Snacks" class="text-danger"></span>
    </div>

    <div class="input-container">
        <label asp-for="PhysicalActivity.Duration">Duration</label>
        <input asp-for="PhysicalActivity.Duration" class="form-control" />
        <span asp-validation-for="PhysicalActivity.Duration" class="text-danger"></span>
    </div>

    <div class="input-container">
        <label asp-for="PhysicalActivity.ActivityType">Type of Activity</label>
        <select asp-for="PhysicalActivity.ActivityType" class="form-control">
            <option value="Running">Running</option>
            <option value="Cycling">Cycling</option>
            <option value="Swimming">Swimming</option>
        </select>
        <span asp-validation-for="PhysicalActivity.ActivityType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
