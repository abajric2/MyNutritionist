@model IEnumerable<MyNutritionist.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecipeLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCalories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCalories)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
