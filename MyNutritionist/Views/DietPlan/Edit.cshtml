<!DOCTYPE html>
<html>
<head>
    <title>Edit DietPlan</title>
    <style>
        .weekly-table {
            width: 100%;
            border-collapse: collapse;
        }

            .weekly-table th,
            .weekly-table td {
                padding: 8px;
                text-align: center;
                border-bottom: 1px solid #ddd;
                margin: 5px;
            }

            .weekly-table th {
                background-color: #f2f2f2;
            }

            .weekly-table tbody tr:hover {
                background-color: #f5f5f5;
            }

            .weekly-table td input[type="text"] {
                border: 1px solid #ddd;
                padding: 6px;
                background-color: #f9f9f9;
            }
    </style>
</head>
<body>
 

    <h1>DietPlan</h1>

    <form action="https://example.com">
        <div style="display:flex align-items center margin-left 100px">
            <label for="day" style="margin-right: 10px;">Date:</label>
            <input type="date" name="day" style="margin-bottom: 20px;">
            <label for="user" style="margin-left: 20px;">User:</label>
            <select name="user" id="user" style="margin-left: 5px;">
                <option value="user1">User 1</option>
                <option value="user2">User 2</option>
                <option value="user3">User 3</option>

            </select>
        </div>
        <input type="hidden">
    </form>

    <table class="weekly-table">
        <thead>
            <tr>
                <th>Day</th>
                <th>Breakfast</th>
                <th>Lunch</th>
                <th>Dinner</th>
                <th>Snacks</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Monday</td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
            </tr>
            <tr>
                <td>Tuesday</td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
            </tr>
            <tr>
                <td>Wednesday</td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
            </tr>
            <tr>
                <td>Thursday</td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
            </tr>
            <tr>
                <td>Friday</td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
            </tr>
            <tr>
                <td>Saturday</td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
            </tr>
            <tr>
                <td>Sunday</td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
                <td><input type="text"></td>
            </tr>
        </tbody>
    </table>

    <hr>

    <div class="row">
        <div class="col-md-4">
            <form action="https://example.com" method="POST">
                <div class="form-group">
                    <label for="totalCalories">Total Calories:</label>
                    <input type="text" name="totalCalories" id="totalCalories">
                </div>
                <div class="form-group" style="margin-top: 20px">
                    <input type="submit" value="Save" class="btn btn-primary" style="margin-top: 20px" ; />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href="https://example.com">Back to List</a>
    </div>

</body>
</html>
