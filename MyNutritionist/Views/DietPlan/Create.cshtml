    <div class="row">
        <div class="col-md-4">
            <form action="https://example.com" method="POST">
                <div class="form-group">
                    <label for="totalCalories">Total Calories:</label>
                    <input type="text" name="totalCalories" id="totalCalories">
                </div>
                <div class="form-group" style="margin-top: 20px">
